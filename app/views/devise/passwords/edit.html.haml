- title 'Change your password'

.row-fluid
  = form_for resource, as: resource_name, url: password_path(resource_name), :method => :put do |f|

    = f.hidden_field :reset_password_token

    - errors = resource.errors[:password]
    .control-group{ class: errors.any? ? 'error' : nil }
      = f.label :password, class: 'control-label'
      .controls
        = f.password_field :password, class: 'span4'
        .help-block= errors.to_sentence if errors.any?

    .controls
      %p= f.submit 'Change my password', class: 'btn btn-primary'
