- title 'Sign up'

.row-fluid
  = form_for resource, as: resource_name, url: registration_path(resource_name), :method => :post do |f|

    - if resource.errors.any?
      .alert.alert-block.alert-error
        Could not sign up!

    - errors = resource.errors[:email]
    .control-group{ class: errors.any? ? 'error' : nil }
      = f.label :email, class: 'control-label'
      .controls
        = f.email_field :email, autofocus: true, class: 'span4'
        .help-block= errors.to_sentence if errors.any?

    - errors = resource.errors[:password]
    .control-group{ class: errors.any? ? 'error' : nil }
      = f.label :password, class: 'control-label'
      .controls
        = f.password_field :password, class: 'span4'
        .help-block= errors.to_sentence if errors.any?

    .control-group
      = f.label :password_confirmation, class: 'control-label'
      .controls
        = f.password_field :password_confirmation, class: 'span4'

    .controls
      %p= f.submit 'Sign up', class: 'btn btn-primary'
